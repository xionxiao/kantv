<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:voisePlayingIconAttr="http://schemas.android.com/apk/res-auto"
tools:context=".ui.activities.personal.KanTVBenchmarkActivity"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent">

<!-- The main content view -->
<FrameLayout
    android:id="@+id/flBenchmark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc">

    <com.kantvai.kantvplayer.ui.activities.personal.KanTVBenchmarkView
        android:id="@+id/benchmark_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
    </com.kantvai.kantvplayer.ui.activities.personal.KanTVBenchmarkView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ijk_transparent_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextAppearance="@style/ToolBar.TitleText"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:context=".toolbar_widget" />
</FrameLayout>

<!-- The navigation drawer -->
<FrameLayout android:id="@+id/right_drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/ijk_transparent_dark" />
</androidx.drawerlayout.widget.DrawerLayout>