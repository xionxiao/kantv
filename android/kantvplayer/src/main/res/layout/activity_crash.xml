<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/immutable_text_white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_crash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="发生意外错误\n很抱歉，给您带来不便\n请将错误日志复制并发送给开发人员"
        android:textColor="@color/immutable_text_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/crash_restart_bt"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_corner_blue"
            android:text="重新启动"
            android:textColor="@color/immutable_text_white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/crash_log_bt"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_corner_blue"
            android:text="错误日志"
            android:textColor="@color/immutable_text_white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>